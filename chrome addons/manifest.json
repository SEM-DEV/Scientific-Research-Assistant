{
    "manifest_version": 3,
    "name": "Scientific Research Assistant",
    "version": "18",
    "description": "List of websites post for scientific research",
    "action": {
        "default_icon": "icon_16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "activeTab"
    ],
    "icons": {
        "16": "icon_16.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+A",
                "windows": "Alt+A",
                "mac": "Alt+A",
                "chromeos": "Alt+A",
                "linux": "Alt+A"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [  
						"https://www.sciencedirect.com/science/article/*",
						"https://arc.aiaa.org/*",
						"https://ascelibrary.org/doi/*",
						"https://asmedigitalcollection.asme.org/*",
						"https://www.degruyter.com/*",
						"https://www.emerald.com/*",
						"https://ieeexplore.ieee.org/*",
						"https://nature.com/*",
						"https://link.springer.com/article/*",
						"https://link.springer.com/chapter/*",
						"https://link.springer.com/book/*",
						"https://www.tandfonline.com/doi/*",
						"https://onlinelibrary.wiley.com/doi/*",
						"https://www.jove.com/*",
						"https://iopscience.iop.org/article/*",
						"https://dl.acm.org/doi/*",
						"https://pubs.acs.org/doi/*",
						"https://pubs.aip.org/*",
						"https://journals.sagepub.com/doi/*",
						"https://cdnsciencepub.com/doi/*",
						"https://epubs.siam.org/doi/*",
                        "https://academic.oup.com/*",
                        "https://www.cambridge.org/core/*",
						"https://psycnet.apa.org/record/*",
						"https://journals.asm.org/doi/*",
						"https://www.scientific.net/*",
						"https://www.science.org/doi/*",
						"https://dl.astm.org/*",
						"https://www.worldscientific.com/*"
						],
						
            "js": ["content.js"]
			
        }
    ]
}
