{
    "manifest_version": 2,
    "name": "Scientific Research Assistant",
    "version": "10.1",
    "description": "List of websites post for scientific research",
   
    "browser_action": {
        "default_icon": "icon_16.png" ,
        "default_popup": "popup.html"
    },
     "background": {
    "scripts": [ "background.js"]
  },
  "permissions": [
    "tabs",
	"contextMenus"
  ],

    "icons": {
        "16": "icon_16.png" 
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+A",
                "windows": "Alt+A",
                "mac": "Alt+A",
                "chromeos": "Alt+A",
                "linux": "Alt+A"
            }
        }
    }
   
}
